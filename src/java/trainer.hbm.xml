<hibernate-mapping>
    <class name="projectfms.bean.TrainerBean" table="Trainer_tb">
        <id name="trainerId" type="string" column="Trainer_id">
            <generator class="assigned"/>
        </id>
        <property name="trainerName" type="string" column="Trainer_name"/>
        <property name="areaOfSpecialization" type="string" column="Area_of_specialization"/>
        <property name="institution" type="string" column="Institution"/>
        <property name="selfSkilling" type="string" column="Self_skilling"/>
        <property name="qualifications" type="string" column="Qualifications"/>
        <property name="mailId" type="string" column="Mail_id"/>
        <property name="phoneNO" type="int" column="Phone_no"/>
        <property name="dateOfBirth" type="string" column="Date_of_birth"/>
        <one-to-one name="minimumWorkingPeroidBean" class="ProjectFMS.Bean.MinimumWorkingPeriodBean" cascade="all" lazy="false">
        </one-to-one>
        <one-to-one name="leaveBean" class="ProjectFms.Bean.LeaveBean" cascade="all" lazy="false">
        </one-to-one>
        <list name="trainingScheduleBean" table="ProjectFMS.Bean.TrainingScheduleBean" cascade="all" lazy="false">
            <key column="Trainer_id"/>
            <index column="type"/>
            <one-to-many  class="ProjectFMS.Bean.TrainingScheduleBean" />
        </list>
        <list name="dailyTaskUpdattion" table="ProjectFMS.Bean.DailyTaskUpdationBean" cascade="all" lazy="false">
            <key column="Trainer_id"/>
            <index column="type"/>
            <one-to-many class="ProjectFMS.Bean.DailyTaskUpdationBean" />
        </list>
         
    </class>
</hibernate-mapping>



